extends ../layouts/default

block main
  .container-fluid
    .row
      //- Thông tin nhanh
      .col-md-4
        .card
          .card-body
            h5 Số người trong cửa hàng: 10
            p.small Thời gian cập nhật: 10:30 AM
      .col-md-4
        .card
          .card-body
            h5 Số người vào: 40
            p.small Thời gian cập nhật: 10:30 AM
      .col-md-4
        .card
          .card-body
            h5 Số người ra: 30
            p.small Thời gian cập nhật: 10:30 AM

    .row
      .col-md-8
        .card
          .card-body
            h5 Biểu đồ thống kê
            .chart-container
              canvas#myChart(width="300" height="150") // Biểu đồ nhỏ hơn

      .col-md-4
        .card
          .card-body
            h5 Chế độ
            .btn-group(role="group")
              button.btn.btn-outline-primary(type="button") Auto
              button.btn.btn-outline-secondary(type="button") Manual

        .card
          .card-body
            h5 Trạng thái
            .btn-group(role="group")
              button.btn.btn-outline-success(type="button") On
              button.btn.btn-outline-danger(type="button") Off

    //- Các biểu đồ và thống kê thêm
    .row
      .col-md-12
        .card
          .card-body
            h5 Biểu đồ so sánh giữa các ngày
            .chart-container
              canvas#myChart2(width="300" height="150")

    //- Script cho biểu đồ
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    script.
      const ctx = document.getElementById('myChart').getContext('2d');
      const myChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['9:00 AM', '10:00 AM', '11:00 AM', '12:00 PM'],
          datasets: [{
            label: 'Số người vào',
            data: [5, 10, 15, 20],
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1,
            fill: true
          }, {
            label: 'Số người ra',
            data: [2, 5, 10, 15],
            backgroundColor: 'rgba(255, 99, 132, 0.2)',
            borderColor: 'rgba(255, 99, 132, 1)',
            borderWidth: 1,
            fill: true
          }]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              beginAtZero: true
            }
          }
        }
      });
