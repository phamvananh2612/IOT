    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      width: 250px;
      background-color: #2c3e50;
      overflow-y: auto;
    }
    .sidebar a {
      color: white;
      display: block;
      padding: 15px;
      text-decoration: none;
      font-weight: 500;
    }
    .sidebar a:hover {
      background-color: #34495e;
      transition: 0.3s;
    }
    .sidebar .active {
      background-color: #2980b9;
    }
    .sidebar i {
      margin-right: 10px;
    }

